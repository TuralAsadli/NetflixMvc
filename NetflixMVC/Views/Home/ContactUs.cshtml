@{
}

@await Component.InvokeAsync("ContactUsViewComponent")

@model UserFeedBackVM
<Section class="gen-section-padding-3 gen-top-border">
    <div class="container container-2">
        <div class="row">
            <div class="col-xl-6">
                <h2 class="mb-5">get in touch</h2>
                <form method="post">
                    <div class="row gt-form">
                        <div class="col-md-6 mb-4">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" type="text" placeholder="Your Name">
                        </div>
                        <div class="col-md-6 mb-4"><label asp-for="Email"></label><input asp-for="Email" type="email" placeholder="Email"></div>
                        <div class="col-md-6 mb-4">
                            <input asp-for="PhoneNumber" type="text" 
                                   placeholder="Cell Phone">
                        </div>
                        <div class="col-md-6 mb-4"><input asp-for="Venue" type="text" placeholder="Venue"></div>
                        <div class="col-md-12 mb-4">
                            <textarea asp-for="Message" rows="6"
                                      placeholder="Your Message"></textarea><br>
                            <input type="submit" value="Send" class="mt-4">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-xl-6">
                <div style="width: 100%">
                    <iframe width="100%" height="550" frameborder="0" scrolling="no"
                            marginheight="0" marginwidth="0"
                            src="https://maps.google.com/maps?width=100%25&amp;height=550&amp;hl=en&amp;q=+(My%20BusiLondon%20Eye,%20London,%20United%20Kingdomness%20Name)&amp;t=&amp;z=9&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
                </div>
            </div>
        </div>
    </div>
</Section>
<!-- Map End -->