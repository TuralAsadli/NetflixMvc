@model Series

<section class="gen-section-padding-3 gen-single-movie">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-12">
                <div class="gen-single-movie-wrapper style-1">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="gen-video-holder">
                                <div class="gen-season-holder">
                                    <div class="tab-content">
                                        <div id="season_0" class="tab-pane active">
                                            <iframe width="100%" height="100%" src="~/videos/tvshows/@Model.VideoName"
                                                    frameborder="0"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen>
                                            </iframe>
                                        </div>
                                        
                                    </div>
                                </div>
                               


                            </div>
                            <div class="gen-single-movie-info">

                                <h2 class="gen-title">@Model.SeriesName</h2>
                                <div class="gen-single-meta-holder">
                                    <ul>
                                        <li class="gen-sen-rating">@Model.Duration</li>
                                        <li>
                                            <i class="fas fa-eye">
                                            </i>
                                            <span>@Model.Views Views</span>
                                        </li>
                                    </ul>
                                </div>
                                <p>
                                    @Model.
                                </p>
                                <div class="gen-after-excerpt">
                                    <div class="gen-extra-data">
                                        <ul>
                                            <li>
                                                <span>Language :</span>
                                                @foreach (var item in Model.Seasons.TvShow.Languages)
                                                {
                                                    <span>@item.LanguageName</span>
                                                }
                                            </li>
                                            <li>
                                                <span>Subtitles :</span>
                                                @foreach (var item in Model.Seasons.TvShow.Subtitle)
                                                {
                                                    <span>@item.SubtitleName</span>
                                                }
                                            </li>
                                            <li>
                                                <span>Audio Languages :</span>
                                                @foreach (var item in Model.Seasons.TvShow.AudioLanguages)
                                                {
                                                    <span>@item.AudioName</span>
                                                }
                                            </li>
                                            <li>
                                                <span>Genre :</span>
                                                @foreach (var item in Model.Seasons.TvShow.Categories)
                                                {
                                                    <span>

                                                        <a asp-action="Index" asp-controller="Category" asp-route-id="@item.Id">
                                                            @item.CategoryName,
                                                        </a>


                                                    </span>
                                                }
                                            </li>
                                            <li>
                                                <span>Run Time :</span>
                                                <span>@Model.Duration</span>
                                            </li>
                                            <li>
                                                <span>Release Date :</span>
                                                <span>@Model.Seasons.ReliseTime.ToString("dd.MM.yyyy")</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="gen-socail-share">
                                        <h4 class="align-self-center">Social Share :</h4>
                                        <ul class="social-inner">
                                            <li>
                                                <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a>
                                            </li>
                                            <li>
                                                <a href="#" class="facebook"><i class="fab fa-instagram"></i></a>
                                            </li>
                                            <li><a href="#" class="facebook"><i class="fab fa-twitter"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
