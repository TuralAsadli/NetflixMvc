@{
}

@model BuySubscribeVM
<section class="position-relative pb-0">
    <div class="gen-login-page-background" style="background-image: url('images/background/asset-54.jpg');"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <form name="pms_login" id="pms_login" action="#" method="post">
                        <h4>Sign In</h4>
                        <p class="login-username">
                            <label asp-for="CreditCardNumber">Credit Card Number</label>
                            <input asp-for="CreditCardNumber" class="input" value="" size="20">
                        </p>
                        <p class="login-password">
                            <label asp-for="CVV">CVV</label>
                            <input asp-for="CVV" class="input" value="" size="20">
                        </p>
                        <p class="login-password">
                            <label asp-for="ExpirationDate">ExpretionDate</label>
                            <input asp-for="ExpirationDate" class="input" value="" size="20">
                        </p>
                        <li class="pms-field pms-field-subscriptions ">
                            @foreach (SubscribeWithIdVM item in ViewBag.Subs)
                            {
                                <div class="pms-subscription-plan">
                                    <label>
                                        <input type="radio"
                                           asp-for="SubId" data-price="199" data-duration="1"
                                           value="@item.Id" checked="checked" data-default-selected="true"><span class="pms-subscription-plan-name">@item.SubscribeName</span><span class="pms-subscription-plan-price">
                                            <span class="pms-divider">
                                                -
                                            </span><span class="pms-subscription-plan-price-value">@item.Price</span><span class="pms-subscription-plan-currency">$</span><span class="pms-divider"> / </span>@(item.Duration / 30) Month
                                        </span><span class="pms-subscription-plan-trial"></span><span class="pms-subscription-plan-sign-up-fee"></span>
                                    </label>
                                </div>
                            }
                            <div id="pms-paygates-wrapper">
                                <input type="hidden" class="pms_pay_gate"
                                       name="pay_gate" value="paypal_standard">
                            </div>
                        </li>
                        <li class="pms-field pms-pass2-field">
                            <div asp-validation-summary="ModelOnly"></div>
                        </li>
                        <p class="login-submit">
                            <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary"
                                   value="Log In">
                            <input type="hidden" name="redirect_to">
                        </p>
                        <input type="hidden" name="pms_login" value="1"><input type="hidden" name="pms_redirect"><a href="register.html">Register</a> | <a href="recover-password.html">
                            Lost your
                            password?
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>