@model UserLogInVM
<section class="position-relative pb-0">
    <div class="gen-login-page-background" style="background-image: url('images/background/asset-54.jpg');"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <form name="pms_login" id="pms_login" action="#" method="post">
                        <h4>Sign In</h4>
                        <p class="login-username">
                            <label asp-for="UserNameOdEmail">Username or Email Address</label>
                            <input asp-for="UserNameOdEmail" class="input" value="" size="20">
                        </p>
                        <p class="login-password">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" class="input" value="" size="20">
                        </p>
                        <p class="login-remember">
                            <label>
                                <input asp-for="IsPersistance" type="checkbox" id="rememberme"> Remember
                                Me
                            </label>
                        </p>
                        <li class="pms-field pms-pass2-field">
                            <div asp-validation-summary="ModelOnly"></div>
                        </li>
                        <p class="login-submit">
                            <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary"
                                   value="Log In">
                            <input type="hidden" name="redirect_to">
                        </p>
                        <input type="hidden" name="pms_login" value="1"><input type="hidden" name="pms_redirect"><a href="register.html">Register</a> | <a href="recover-password.html">
                            Lost your
                            password?
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>