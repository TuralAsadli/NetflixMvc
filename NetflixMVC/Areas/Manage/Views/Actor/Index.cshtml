@using BusinesLogic.ViewModel;
@using BusinesLogic.ViewModel.Actor;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model IEnumerable<ActorWithIdVM>






<section class="section">
    <div class="row" id="table-head">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Actors</h4>
                </div>
                <div class="card-header">
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                </div>
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>NAME</th>
                                    <th>SURNAME</th>
                                    <th>Delete</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ActorName</td>
                                        <td>@item.ActorSurname</td>
                                        <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                        <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




