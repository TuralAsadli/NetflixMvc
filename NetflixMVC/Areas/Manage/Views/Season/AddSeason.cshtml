@{
}
@model SeasonVM
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">

                <div class="card-content">
                    <div class="card-body">
                        <form class="form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="SeasonName">Season Name</label>
                                        <input asp-for="SeasonName" id="first-name-column" class="form-control"
                                               placeholder="Name">
                                        <span asp-validation-for="SeasonName"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Rating">Rating</label>
                                        <input asp-for="Rating" id="last-name-column" class="form-control"
                                               placeholder="Rating">
                                        <span asp-validation-for="Rating"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="ReliseTime">Relise date</label>
                                        <input asp-for="ReliseTime" id="last-name-column" class="form-control"
                                               placeholder="Relise date">
                                        <span asp-validation-for="ReliseTime"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-6 col-md-12">
                                        <label asp-for="TrailerVideoFile" class="form-label">Trailer</label>
                                        <input class="form-control" asp-for="TrailerVideoFile" id="formFile">
                                        <span asp-validation-for="TrailerVideoFile"></span>
                                    </div>

                                </div>

                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                    <button asp-action="Index" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>










