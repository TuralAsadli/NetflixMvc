@using BusinesLogic.ViewModel.TvShow
@{

}
@model IEnumerable<TvShowWithIdVM>

<section class="section">
    <div class="card">
        <div class="card-header">
            Simple Datatable
        </div>
        <div class="card-header">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th>Movie Name</th>
                        <th>Relise Date</th>
                        <th>Rating</th>
                        <th>Delete</th>
                        <th>Update</th>
                        <th>Show Seasons</th>
                        <th>Add Season</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TvShowName</td>
                            <td>@item.ReliseTime.ToString("dd.MM.yyyyy");</td>
                            <td>@item.rating</td>
                            <td><a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
                            <td><a asp-action="ShowSeasons" asp-controller="Season" asp-route-id="@item.Id" class="btn btn-warning">Show Seasons</a></td>
                            <td><a asp-action="AddSeason" asp-controller="Season" asp-route-id="@item.Id" class="btn btn-warning">Add Season</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</section>