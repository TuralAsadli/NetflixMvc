@{

}
@model IEnumerable<SeriaWithIdVM>

<section class="section">
    <div class="card">
        <div class="card-header">
            Simple Datatable
        </div>
        
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th>Seria Name</th>
                        <th>Duration</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SeriesName</td>
                            <td>@item.duration</td>
                            <td><a asp-action="DeleteSeria" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</section>